<script type="text/javascript">
$(document).ready(function (){
    $('.navbar-nav > li').each(function(){
        var t = null;
        var li = $(this);
        li.hover(function(){
            t = setTimeout(function(){
                li.find("div").slideDown(300);
                t = null;
            }, 300);
        }, function(){
            if (t){
                clearTimeout(t);
                t = null;
            }
            else
                li.find("div").slideUp(200);
        });
    });
});


</script>

